// Place your settings in this file to overwrite default and user settings.
{
    "editor.wrappingIndent": "indent",
    "editor.tabSize": 4,
	"editor.insertSpaces": true,
    "editor.formatOnType": true,

    "files.trimTrailingWhitespace": true,

	"javascript.validate.lint.missingSemicolon": "error",
	"javascript.validate.lint.semicolonsInsteadOfBlocks": "warning",
	"javascript.validate.lint.functionsInsideLoops": "warning",
    "javascript.validate.lint.redeclaredVariables": "error",
    "javascript.validate.lint.unusedFunctions": "warning",

    "files.exclude": {
        ".tmp/": true
    },

    "search.exclude": {
        "build/": true,
        "**/node_modules": true,
        "**/bower_components": true
    }
}